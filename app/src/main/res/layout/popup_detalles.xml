<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_boton_redondo"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagenDetalleFinal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="22dp"
            />

        <TextView
            android:id="@+id/tituloInstrupopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Instrictora "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23dp" />


        <ScrollView
            android:id="@+id/scrollInformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tituloHistpopup"
            android:layout_margin="10dp"
            android:layout_marginTop="-10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/informacionInstu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ContaNIIF es una estrategia didáctica activa de aprendizaje que incentivara al aprendiz, al instructor y al empresario para estar actualizando los conocimientos en la nueva normatividad contable, financiera y tributaria que regula a nuestro país."
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>