<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_weight="6">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_boton_redondo">


            <WebView
                android:layout_margin="9dp"
                android:id="@+id/imagenFondoAyuda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/AcercaClaro"
                android:maxLength="5000"
                tools:ignore="WebViewLayout" />

            <ImageButton
                android:id="@+id/btnBackAyuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imagenFondoAyuda"
                android:layout_alignStart="@+id/imagenFondoAyuda"
                android:background="@drawable/back" />

            <ImageButton
                android:id="@+id/btnNextAyuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imagenFondoAyuda"
                android:layout_alignEnd="@+id/imagenFondoAyuda"
                android:background="@drawable/next" />

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>