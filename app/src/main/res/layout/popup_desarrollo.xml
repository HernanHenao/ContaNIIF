<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_boton_redondo"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tituloInforpopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imagenPopupInforma"
            android:text="Equipo Desarrollo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagenUsuario"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/usuario" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagenUsuario2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:src="@drawable/usuario" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagenUsuario3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:src="@drawable/usuario" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollInformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tituloInforpopup"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Miryam Montenegro
                    Tecnologo Contabilidad y Finanzas."
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Gian Carlos Martinez Quintero
                    Diseñador Gráfico"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Victor Manuel García Hurtado
                    Desarrollador"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Juan Diego Villa Zuluaga
                    Desarrollador"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>