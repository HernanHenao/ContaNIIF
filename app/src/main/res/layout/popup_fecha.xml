<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_boton_redondo"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="3dp">


        <LinearLayout
            android:id="@+id/gridFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="12dp">

            <Spinner
                android:id="@+id/spinnerAnio"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Spinner>

            <Spinner
                android:id="@+id/spinnerMes"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Spinner>

            <Spinner
                android:id="@+id/spinnerDia"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/gridFecha"
            android:layout_weight="2"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnAceptarFecha"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/borde_redondo_boton"
                android:text="Aceptar"
                android:layout_marginRight="10dp"
                android:textColor="#fff"></Button>

            <Button
                android:id="@+id/btnCancelarFecha"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/borde_redondo_boton"
                android:text="Cancelar"
                android:textColor="#fff"></Button>




        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollInformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tituloSabiaspopup"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>