<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_boton_redondo"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="3dp">


            <LinearLayout
                android:id="@+id/gridFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:paddingRight="10dp"
                android:layout_marginTop="12dp">

                <Spinner
                    android:id="@+id/spinnerAnio"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinnerMes"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinnerDia"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="9dp"
                android:layout_below="@+id/gridFecha"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelarFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/borde_redondo_boton"
                    android:text="Cancelar"
                    android:textColor="#fff" />


                <Button
                    android:id="@+id/btnAceptarFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_redondo_boton"
                    android:text="Aceptar"
                    android:textColor="#fff" />

            </LinearLayout>
        </LinearLayout>
</LinearLayout>