<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_boton_redondo"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tituloHistpopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Nuestra Historia"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23dp" />


        <ScrollView
            android:id="@+id/scrollInformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tituloHistpopup"
            android:layout_margin="10dp"
            android:layout_marginTop="-10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ContaNIIF es una estrategia didáctica activa de aprendizaje que incentivara al aprendiz, al instructor y al empresario para estar actualizando los conocimientos en la nueva normatividad contable, financiera y tributaria que regula a nuestro país."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>