<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".grupos.Grupos">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layoutGrupo"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#fff"
            android:text="Perteneces a: "
            android:background="@color/ConfiguracionClaro"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/campoGrupoP"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#fff"
            android:background="@color/ConfiguracionClaro"/>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/layoutGrupo"
        android:id="@+id/recyclerGrupos"
        android:layout_width="match_parent"
        android:layout_height="459dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager">

    </android.support.v7.widget.RecyclerView>

