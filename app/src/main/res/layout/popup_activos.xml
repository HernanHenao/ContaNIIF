<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_boton_redondo"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagenPopupActivo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo_contaniif" />


        <TextView
            android:id="@+id/tituloPopupActivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imagenPopupActivo"
            android:text="Información de ContaNIIF"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23dp" />

        <ScrollView
            android:id="@+id/scrollInformacionActivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tituloPopupActivo"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descripActivoPopup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ContaNIIF, es una estrategia didáctica activa de aprendizaje, que incentivará al aprendiz, al instructor y al Empresario a estar actualizados en la normatividad contable, financiera y tributaria vigente que regula a nuestro país.
"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/precioActivoPopup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2,300,300 CriptoNIIF"
                    android:textAlignment="center"
                    android:textColor="@color/VideosClaro"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnComprar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#ff00cc86"
                    android:text="Comprar" />
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#ff00cc86"
                    android:text="Cancelar" />
            </LinearLayout>


        </ScrollView>
    </RelativeLayout>

</RelativeLayout>