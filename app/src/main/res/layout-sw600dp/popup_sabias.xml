<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="40dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_boton_redondo"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imagenPopupInforma"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:elevation="200dp"
            android:src="@drawable/mascota_pensando" />


        <TextView
            android:id="@+id/tituloSabiaspopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imagenPopupInforma"
            android:text="Información de ContaNIIF"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="33dp" />

        <ScrollView
            android:id="@+id/scrollInformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tituloSabiaspopup"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/teoriaSabias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ContaNIIF, es una estrategia didáctica activa de aprendizaje, que incentivará al aprendiz, al instructor y al Empresario a estar actualizados en la normatividad contable, financiera y tributaria vigente que regula a nuestro país. "
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="28dp" />
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</RelativeLayout>