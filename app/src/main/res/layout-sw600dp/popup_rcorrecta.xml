<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="475dp"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="375dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="44dp"
                android:background="@color/white">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="249dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="48dp">

                    <TextView
                        android:id="@+id/campoRetroBuena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingTop="3dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="4dp"
                        android:text="RETRO BUENA"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </ScrollView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#3AAA35"
                    android:gravity="center"
                    android:text="CORRECTO"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnRetroBuena"
                    android:layout_width="246dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="27dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/borde_redondo_boton"
                    android:text="Continuar"
                    android:textColor="@color/white"
                    android:textSize="28sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="104dp"
                android:layout_height="143dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginBottom="-27dp"
                android:src="@drawable/mascota_pequena_feliz"
                android:contentDescription="TODO" />


            <ImageView
                android:id="@+id/circuloPuntajeCorrecto"
                android:layout_width="93dp"
                android:layout_height="79dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="-5dp"
                android:src="@drawable/estrella"
                android:contentDescription="TODO" />

            <RelativeLayout
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/campoPuntajeCorrecto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:text="+10"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="33sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>