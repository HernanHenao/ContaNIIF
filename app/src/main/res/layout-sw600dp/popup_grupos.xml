<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="475dp"
    android:layout_marginBottom="73dp"
    android:background="@android:color/transparent"
    android:padding="15dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="375dp"
        android:padding="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/borde_boton_redondo">

        <Button
            android:id="@+id/btnContinuarGrupo"
            android:layout_width="246dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="62dp"
            android:background="@drawable/borde_redondo_boton"
            android:text="Aceptar"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btnCancelarGrupo"
            android:layout_width="246dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borde_redondo_boton"
            android:text="Cancelar"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/campoNombreGrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/campoGrupo"
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:text="TextView" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/circuloPuntajeCorrecto"
        android:layout_width="93dp"
        android:layout_height="89dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginEnd="-5dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/pregunta_grupo"
        android:contentDescription="TODO" />

    <RelativeLayout
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginEnd="17dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp">

        <TextView
            android:paddingTop="26dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="23sp"
            android:id="@+id/campoPuntajeCorrecto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
             />

    </RelativeLayout>

</RelativeLayout>