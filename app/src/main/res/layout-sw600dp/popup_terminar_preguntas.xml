<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="420dp"
        android:layout_height="615dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="345dp"
            android:layout_height="449dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="57dp"
            android:background="@drawable/borde_boton_redondo">

            <Button
                android:id="@+id/btnFinal"
                android:layout_width="300dp"
                android:layout_height="46dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="43dp"
                android:background="@drawable/borde_redondo_boton"
                android:text="Aceptar"
                android:textSize="28sp"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/textoFinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="74dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="3dp"
                android:paddingRight="20dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="28sp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="268dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="81dp">

            </ScrollView>


        </RelativeLayout>

        <ImageView
            android:id="@+id/imagenIzqquierda"
            android:layout_width="229dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:src="@drawable/mascota_entrenar"
            android:contentDescription="TODO" />


    </RelativeLayout>
</LinearLayout>


</RelativeLayout>