<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="475dp"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="375dp"
                android:layout_alignTop="@+id/circuloPuntajeIncorrecto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:background="@color/white"
                android:gravity="center_horizontal">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="249dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="48dp">

                    <TextView
                        android:id="@+id/campoRetroMala"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingTop="3dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="4dp"
                        android:text="RETRO MALA"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="30dp"/>
                </ScrollView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:background="#E7583C"
                    android:gravity="center"
                    android:text="INCORRECTO"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="28sp"/>

                <Button
                    android:id="@+id/btnRetroMala"
                    android:layout_width="246dp"
                    android:layout_height="38dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="27dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/borde_redondo_boton"
                    android:text="Continuar"
                    android:textSize="28sp"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <ImageView
                android:layout_width="104dp"
                android:layout_height="143dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/mascota_puquena_triste"
                android:contentDescription="TODO" />


            <ImageView
                android:id="@+id/circuloPuntajeIncorrecto"
                android:layout_width="93dp"
                android:layout_height="79dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="317dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/estrella"
                android:contentDescription="TODO" />


            <TextView
                android:id="@+id/campoPuntajeIncorrecto"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="331dp"
                android:layout_marginTop="10dp"
                android:paddingTop="22dp"
                android:text="+0"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="33sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>